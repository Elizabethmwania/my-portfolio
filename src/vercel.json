{
    "version": 2,
    "builds": [{ "src": "public/**/*", "use": "@vercel/static-build" }],
    "routes": [
      { "handle": "filesystem" },
      {
        "src": "/api/(.*)",
        "dest": "/api/$1",
        "methods": ["GET", "POST"]
      },
      {
        "src": "/(.*)",
        "dest": "/$1",
        "methods": ["GET"]
      }
    ]
  }
  